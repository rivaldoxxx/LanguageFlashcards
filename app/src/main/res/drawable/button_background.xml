<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Wciśnięty stan przycisku -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- jasnozielony po kliknięciu -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Domyślny stan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- białe tło -->
            <stroke
                android:width="2dp"
                android:color="#81C784" /> <!-- pastelowa zieleń -->
            <corners android:radius="16dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
            <size
                android:width="0dp"
                android:height="0dp" />
        </shape>
    </item>

</selector>
